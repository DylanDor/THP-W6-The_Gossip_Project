<% if flash[:alert] %>
    <div class="container p-1 text-center alert  alert-danger" role="alert">

        <p>Nous n'avons pas réussi à créer le potin !</p>

    </div>
<% end %>

<%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'Title' %>
    <%= text_field_tag 'title', @gossip.title %>
    <br /> <br />

    <%= label_tag 'Body' %>
    <%= text_area_tag 'content', @gossip.content %>
    <br /> <br />

    <%= submit_tag "Create Post" %>

<% end %>