<% if flash[:success] %>
    <div class="container p-1 text-center alert alert-success" role="alert">

        <p>Nous avons réussi à créer le potin !</p>

    </div>
<% end %>
<div class="d-flex flex-wrap justify-content-center">
    <div class="p-3 mt-5 bg-body border-bottom" style="width: 90%;">
        <div class="card-body row align-items-center">
            <div class="col-3">
                <h5 class= "card-title">Titre</h5>
            </div>
            <div class="col">
                <p class="card-text">Gossip</p>
            </div>
            <div class="col-2">
                <p class="card-text">Auteur</p>
            </div>
            <div class="col-2 d-flex justify-content-end">
                <%= link_to "Nouveau", new_gossip_path, :class => "btn btn-success" %>
            </div>
        </div>
    </div>
</div>

<div class="d-flex flex-wrap justify-content-center">
    <% @gossips.reverse_each do |gossip| %>
        <div class=" p-3  bg-body rounded border-bottom" style="width: 90%;">
            <div class="card-body row align-items-center">
                <div class="col-3">
                    <h5 class= "card-title"><%= gossip.title %></h5>
                </div>
                <div class="col">
                    <p class="card-text"><%= gossip.content %></p>
                </div>
                <div class="col-2">
                    <%= link_to "#{gossip.user.first_name}", user_path(gossip.user.id), :class => "card-text" %>
                </div>
                <div class="col-2 d-flex justify-content-end">
                    <%= link_to "Voir plus", gossip_path(gossip.id), :class => "btn btn-outline-dark" %>
                </div>
            </div>
        </div>
    <% end %>
</div>